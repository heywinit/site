---
import { themeConfig } from '@/config'
import ThemeToggle from '@/components/ui/ThemeToggle.astro'
---

<header>
  <nav>
    <a href="/">{themeConfig.site.title}</a>
    <div class="nav-right">
      <a
        href="https://github.com/heywinit"
        target="_blank"
        rel="noopener noreferrer"
        class="nav-link">GitHub</a
      >
      <a href="https://x.com/hiwinit" target="_blank" rel="noopener noreferrer" class="nav-link"
        >X</a
      >
      <a href="mailto:heywinit@example.com" class="nav-link">Mail</a>
      <ThemeToggle />
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  header > nav > a {
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    text-decoration: none;
    min-width: 3rem;
    display: inline-block;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    width: min-content;
  }

  .nav-link {
    font-weight: var(--font-weight-normal);
    font-size: var(--font-size-s);
    color: var(--text-secondary);
    transition: color 0.2s ease-out;
    width: min-content;
    min-width: 0;
    white-space: nowrap;
  }

  .nav-link:hover {
    color: var(--primary);
  }

  header a:hover {
    color: var(--primary);
    transition: color 0.2s ease-out;
  }
</style>
