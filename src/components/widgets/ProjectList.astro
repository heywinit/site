---
import type { ProjectListProps } from '@/types'
import type { CollectionEntry } from 'astro:content'

const { projects, showMetadata = false } = Astro.props as ProjectListProps
type Project = CollectionEntry<'projects'>
---

<ul>
  {
    projects.map((project: Project) => (
      <li>
        <div class="project-item">
          <div class="title-row">
            <p class="title">{project.data.title}</p>
            <div class="links">
              {project.data.url && (
                <a
                  href={project.data.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="link-icon"
                  aria-label="Project URL"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    width="24"
                    height="24"
                    color="#ffffff"
                    fill="none"
                  >
                    <path
                      d="M11.1004 3.00208C7.4515 3.00864 5.54073 3.09822 4.31962 4.31931C3.00183 5.63706 3.00183 7.75796 3.00183 11.9997C3.00183 16.2415 3.00183 18.3624 4.31962 19.6801C5.6374 20.9979 7.75836 20.9979 12.0003 20.9979C16.2421 20.9979 18.3631 20.9979 19.6809 19.6801C20.902 18.4591 20.9916 16.5484 20.9982 12.8996"
                      stroke="#ffffff"
                      stroke-width="1.5"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                    <path
                      d="M20.4803 3.51751L14.931 9.0515M20.4803 3.51751C19.9863 3.023 16.6587 3.0691 15.9552 3.0791M20.4803 3.51751C20.9742 4.01202 20.9282 7.34329 20.9182 8.04754"
                      stroke="#ffffff"
                      stroke-width="1.5"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                  </svg>
                </a>
              )}
              {project.data.github && project.data.github !== project.data.url && (
                <a
                  href={project.data.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="link-icon"
                  aria-label="GitHub repository"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    width="24"
                    height="24"
                    color="#ffffff"
                    fill="none"
                  >
                    <path
                      d="M10 20.5675C6.57143 21.7248 3.71429 20.5675 2 17"
                      stroke="#ffffff"
                      stroke-width="1.5"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                    <path
                      d="M10 22V18.7579C10 18.1596 10.1839 17.6396 10.4804 17.1699C10.6838 16.8476 10.5445 16.3904 10.1771 16.2894C7.13394 15.4528 5 14.1077 5 9.64606C5 8.48611 5.38005 7.39556 6.04811 6.4464C6.21437 6.21018 6.29749 6.09208 6.31748 5.9851C6.33746 5.87813 6.30272 5.73852 6.23322 5.45932C5.95038 4.32292 5.96871 3.11619 6.39322 2.02823C6.39322 2.02823 7.27042 1.74242 9.26698 2.98969C9.72282 3.27447 9.95075 3.41686 10.1515 3.44871C10.3522 3.48056 10.6206 3.41384 11.1573 3.28041C11.8913 3.09795 12.6476 3 13.5 3C14.3524 3 15.1087 3.09795 15.8427 3.28041C16.3794 3.41384 16.6478 3.48056 16.8485 3.44871C17.0493 3.41686 17.2772 3.27447 17.733 2.98969C19.7296 1.74242 20.6068 2.02823 20.6068 2.02823C21.0313 3.11619 21.0496 4.32292 20.7668 5.45932C20.6973 5.73852 20.6625 5.87813 20.6825 5.9851C20.7025 6.09207 20.7856 6.21019 20.9519 6.4464C21.6199 7.39556 22 8.48611 22 9.64606C22 14.1077 19.8661 15.4528 16.8229 16.2894C16.4555 16.3904 16.3162 16.8476 16.5196 17.1699C16.8161 17.6396 17 18.1596 17 18.7579V22"
                      stroke="#ffffff"
                      stroke-width="1.5"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                  </svg>
                </a>
              )}
            </div>
          </div>
          {project.data.description && <p class="description">{project.data.description}</p>}
          {showMetadata && (project.data.tags || project.data.techStack) && (
            <div class="metadata">
              {project.data.tags && project.data.tags.length > 0 && (
                <div class="tags">
                  {project.data.tags.map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}
              {project.data.techStack && project.data.techStack.length > 0 && (
                <div class="tech-stack">
                  <span class="tech-stack-label">Tech:</span>
                  {project.data.techStack.map((tech) => (
                    <span class="tech-item">{tech}</span>
                  ))}
                </div>
              )}
            </div>
          )}
        </div>
      </li>
    ))
  }
</ul>
<div class="placeholder"></div>

<style>
  ul {
    padding: 0;
    margin: 0;
    list-style-type: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .project-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .title-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
  }

  .title {
    margin: 0;
    font-weight: 500;
    flex: 1;
  }

  .links {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .link-icon {
    color: var(--text-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition:
      color 0.15s ease-out,
      opacity 0.15s ease-out;
    opacity: 0.6;
  }

  .link-icon svg {
    width: 16px;
    height: 16px;
  }

  @media (hover: hover) and (pointer: fine) {
    .link-icon:hover {
      color: var(--text-primary);
      opacity: 1;
    }
  }

  .description {
    margin: 0;
    color: var(--text-secondary);
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .metadata {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    justify-content: flex-end;
    margin-left: auto;
  }

  .tag {
    display: inline-block;
    padding: 0.125rem 0.375rem;
    background-color: var(--astro-code-background);
    border: 1px solid var(--code-bg);
    border-radius: 12px;
    font-size: 0.65rem;
    color: var(--text-secondary);
    font-family: var(--mono);
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.8rem;
  }

  .tech-stack-label {
    color: var(--text-secondary);
    font-weight: 500;
    margin-right: 0.125rem;
  }

  .tech-item {
    display: inline-block;
    padding: 0.125rem 0.5rem;
    background-color: var(--astro-code-background);
    border: 1px solid var(--code-bg);
    border-radius: 12px;
    font-size: 0.75rem;
    color: var(--text-secondary);
    font-family: var(--mono);
  }

  .placeholder {
    height: 2rem;
  }
</style>
